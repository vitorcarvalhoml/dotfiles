"Charset Config"
scriptencoding utf-8
set encoding=utf-8
set nocompatible

"General Config"
set number
set backspace=indent,eol,start
set showmode
set visualbell
syntax on

"Turn Off Swap Files"
set noswapfile
set nobackup
set nowb

"Indentation Config"
set autoindent
set smartindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab

"Scrolling Config"
set scrolloff=8
set sidescrolloff=15
set sidescroll=1
