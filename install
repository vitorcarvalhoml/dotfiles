#!/bin/bash

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# gitfiles
ln -s ${BASEDIR}/gitfiles/gitconfig ~/.gitconfig

# ntp.br
sudo bash ${BASEDIR}/.ntp/install.sh

# homesbrew
bash ${BASEDIR}/homebrew/install.sh

# vimfiles
ln -s ${BASEDIR}/.vim/.vimrc ~/.vimrc

# osx
wget https://gist.githubusercontent.com/brandonb927/3195465/raw/2132357b6bb098b06b0419d7fc73d5c39054441d/osx-for-hackers.sh -O ${BASEDIR}/.osx/osx-for-hackers.sh
bash ${BASEDIR}/.osx/osx-for-hackers.sh

# zsh
bash ${BASEDIR}/.zshrc/install.sh
rm ~/.zshrc
ln -s ${BASEDIR}/.zshrc/.zshrc ~/.zshrc

# npm packages
bash -p ${HOME}/.npm/install.sh
ln -s ${BASEDIR}/.npm/.npmrc ~/.npmrc

# st3 configuration
ln -s ${BASEDIR}/.st3/User ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/
