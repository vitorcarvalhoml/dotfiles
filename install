#!/bin/bash

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# gitfiles
ln -s ${BASEDIR}/gitfiles/gitconfig ~/.gitconfig

# ntp.br
sudo bash ${BASEDIR}/ntp/install.sh

# homesbrew
bash ${BASEDIR}/homebrew/install.sh

# vagrant
bash ${BASEDIR}/vagrant/install.sh

# vimfiles
ln -s ${BASEDIR}/vim ~/.vim

# zsh
bash ${BASEDIR}/zshrc/install.sh
rm ~/.zshrc
ln -s ${BASEDIR}/zshrc/zshrc ~/.zshrc

# st3 configuration
ln -s ${BASEDIR}/st3/User ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/

# osx
bash ${BASEDIR}/osx/osx-defaults.sh
